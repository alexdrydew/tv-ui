{
    "name": "root",
    "description": "Secure boilerplate for Electron app based on Vite",
    "version": "3.1.0",
    "private": true,
    "type": "module",
    "main": "packages/entry-point.mjs",
    "workspaces": [
        "packages/*"
    ],
    "engines": {
        "node": ">=23.0.0"
    },
    "lint-staged": {
        "*.js": "eslint --cache --fix",
        "*.{js,css,md}": "prettier --write"
    },
    "scripts": {
        "build": "npm run build -ws --if-present",
        "compile": "npm run build && electron-builder build --config electron-builder.mjs",
        "test": "npm run compile && npx playwright test ./tests/e2e.spec.ts",
        "start": "node packages/dev-mode.js",
        "typecheck": "npm run typecheck -ws --if-present",
        "create-renderer": "cd packages && npm create vite@latest renderer",
        "prepare": "husky"
    },
    "devDependencies": {
        "@eslint/js": "^9.24.0",
        "@npmcli/map-workspaces": "4.0.2",
        "@playwright/test": "1.51.1",
        "@types/node": "22.14.0",
        "electron": "35.1.5",
        "electron-builder": "26.0.12",
        "eslint": "^9.24.0",
        "eslint-config-prettier": "^10.1.2",
        "eslint-plugin-react": "^7.37.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.19",
        "glob": "11.0.1",
        "globals": "^16.0.0",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.1",
        "playwright": "^1.51.1",
        "prettier": "3.5.3",
        "typescript": "^5.8.3",
        "typescript-eslint": "^8.29.1"
    },
    "dependencies": {
        "@app/main": "*"
    }
}
