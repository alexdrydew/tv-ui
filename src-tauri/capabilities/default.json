{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Default capability for main window",
  "windows": ["main"],
  "permissions": [
    "core:path:default",
    "core:event:default",
    "core:window:default",
    "core:app:default",
    "core:resources:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$HOME/tv-ui.json",
          "scope": {
            "allow": ["read"],
            "description": "Read TV UI config"
          }
        }
      ]
    },
    "fs:read-files",
    "fs:allow-exists"
  ]
}
