{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "NodeNext",
        "target": "ESNext",
        "sourceMap": false,
        "moduleResolution": "NodeNext",
        "skipLibCheck": true,
        "isolatedModules": true,
        "types": ["node"],
        "baseUrl": ".",
        "paths": {
            "@app/preload": ["../preload"],
            "@app/renderer": ["../renderer"]
        },
        "strict": true
    },
    "include": ["src/**/*.ts", "../../types/**/*.d.ts"],
    "exclude": ["**/*.spec.ts", "**/*.test.ts"]
}
